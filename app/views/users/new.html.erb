<% if session[:user] %>
<div class='row'>
  <div class='col-md-12'>
    <div class='panel'>
      <div class='panel-body'>
        <h4>Please Log out before making a new Account</h4>
      </div>
    </div>
  </div>
</div>
<% else %>
<div class='row'>
  <div class='row text-center'>
    <div class='col-md-8 col-centered'>
      <div class='panel'>
        <div class='panel-body'>
          <h3>Account Creation</h1>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <% if flash.notice %>
  <%= render 'layouts/flash' %>
  <% end %>
</div>

<%= render 'signup_form' %>

<% end %>
</div>
