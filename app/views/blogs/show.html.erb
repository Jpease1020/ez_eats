<div class="container">
  <div class="row col-md-offset-2 col-md-8">
    <h1 class="blog-heading"><%= @blog.title %></h1>
  </div>
  <div class="row">
    <div class="col-md-offset-2 col-md-8">


    <div class="blog-entry">
      <h3 class="blog-date">Posted on <%= @blog.date %></h3>
      <img class="img-responsive" src= "<%= "#{@blog.image}" %>" alt="">
      <h3 class="blog-content"><%= @blog.content %></h3>
    </div>
  </div>
  <div class="col-md-2">

    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdown-tags" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Blog Archive
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdown-tags">
        <% archive.each do |archive| %>
          <li><a href="#"><%= archive.titleize %></a></li>
        <% end %>
      </ul>
    </div>

    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdown-tags" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Blog Tags
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdown-tags">
        <% @tags.each do |tag| %>
          <li><a href="<%= tag_path(tag) %>"><%= tag.name.titleize %></a></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
</div>
